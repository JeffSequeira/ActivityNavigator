<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context="com.jeff.myapp.ActivityNavigator">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/grid"
        android:layout_marginLeft="5dp">


        <ImageView
        android:onClick="onClick"
        android:id="@+id/btnSorting"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:src="@drawable/benchmark"
        android:layout_row="0"
        android:layout_column="1"
            android:padding="15dp"/>


        <ImageView
        android:onClick="onClick"
        android:id="@+id/btnAnimation"
        android:src="@drawable/animation"
        android:padding="15dp"
        android:layout_height="116dp"
        android:layout_width="116dp"
        android:layout_row="1"
        android:layout_column="1" />

        <ImageView
            android:onClick="onClick"
            android:id="@+id/btnToast"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:src="@drawable/toast"
            android:layout_row="1"
            android:layout_column="0"
            android:padding="15dp"/>

        <ImageView
            android:onClick="onClick"
            android:id="@+id/btnCalculator"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:src="@drawable/calculator"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="15dp"/>

        <ImageView
            android:onClick="onClick"
            android:id="@+id/btnVibrator"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:src="@drawable/vibrate"
            android:layout_row="0"
            android:layout_column="2"
            android:padding="15dp"/>

        <ImageView
        android:onClick="onClick"
        android:id="@+id/btnInstagram"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:src="@drawable/gallery"
        android:layout_row="1"
        android:layout_column="2"
            android:padding="15dp"/>

        <ImageView
            android:onClick="onClick"
            android:id="@+id/btnNotification"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:src="@drawable/notification"
            android:layout_row="2"
            android:layout_column="0"
            android:padding="15dp"/>

        <ImageView
            android:onClick="onClick"
            android:id="@+id/btnWifi"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:src="@drawable/wifi"
            android:layout_row="2"
            android:layout_column="2"
            android:padding="15dp"/>

        <ImageView
            android:onClick="onClick"
            android:id="@+id/btnVideo"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:src="@drawable/video"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="15dp"/>

        <ImageView
            android:onClick="onClick"
            android:id="@+id/btnSound"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:src="@drawable/sound"
            android:layout_row="3"
            android:layout_column="0"
            android:padding="15dp"/>

        <ImageView
            android:onClick="onClick"
            android:id="@+id/btnA1"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:src="@drawable/a"
            android:layout_row="3"
            android:layout_column="2"
            android:padding="15dp"/>

        <ImageView
            android:onClick="onClick"
            android:id="@+id/btnRegister"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:src="@drawable/register"
            android:layout_row="3"
            android:layout_column="1"
            android:padding="15dp"/>

        <ImageView
            android:onClick="onClick"
            android:id="@+id/btnSensor"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:src="@drawable/sensor"
            android:layout_row="4"
            android:layout_column="0"
            android:padding="15dp"/>

        <ImageView
            android:onClick="onClick"
            android:id="@+id/btnSuperhero"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:src="@drawable/superhero"
            android:layout_row="4"
            android:layout_column="1"
            android:padding="15dp"/>

        <ImageView
            android:onClick="onClick"
            android:id="@+id/btnMaps"
            android:layout_width="116dp"
            android:layout_height="116dp"
            android:src="@drawable/maps"
            android:layout_row="4"
            android:layout_column="2"
            android:padding="15dp"/>


        


    </GridLayout>
</ScrollView>